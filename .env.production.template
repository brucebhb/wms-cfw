# 生产环境配置文件模板
# 复制此文件为 .env.production 并填入实际值

# 基础配置
FLASK_ENV=production
SECRET_KEY=your_very_secure_secret_key_here_32_chars_minimum

# 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=warehouse_user
MYSQL_PASSWORD=your_secure_mysql_password
MYSQL_DATABASE=warehouse_production

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# 邮件配置（可选）
MAIL_SERVER=smtp.qq.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@qq.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=your_email@qq.com

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
WORKERS=4

# 日志配置
LOG_LEVEL=INFO
LOG_TO_FILE=true

# 备份配置
BACKUP_ENABLED=true
BACKUP_PATH=/var/backups/warehouse

# 监控配置
MONITORING_ENABLED=true
