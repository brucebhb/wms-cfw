    <script>
        $(document).ready(function () {
            // 检查是否有保存的侧边栏状态
            if (localStorage.getItem('sidebarState') === 'collapsed') {
                $('#sidebar').addClass('active');
                $('#content').addClass('active');
                $('#sidebar-toggler i').removeClass('fa-angle-left').addClass('fa-angle-right');
            }
            
            // 顶部菜单按钮切换侧边栏
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
                
                // 同步底部箭头图标
                if ($('#sidebar').hasClass('active')) {
                    $('#sidebar-toggler i').removeClass('fa-angle-left').addClass('fa-angle-right');
                    localStorage.setItem('sidebarState', 'collapsed');
                } else {
                    $('#sidebar-toggler i').removeClass('fa-angle-right').addClass('fa-angle-left');
                    localStorage.setItem('sidebarState', 'expanded');
                }
            });
            
            // 底部收缩按钮
            $('#sidebar-toggler').on('click', function (e) {
                e.preventDefault();
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
                
                if ($('#sidebar').hasClass('active')) {
                    $(this).find('i').removeClass('fa-angle-left').addClass('fa-angle-right');
                    localStorage.setItem('sidebarState', 'collapsed');
                } else {
                    $(this).find('i').removeClass('fa-angle-right').addClass('fa-angle-left');
                    localStorage.setItem('sidebarState', 'expanded');
                }
            });
            
            // 使用事件委托确保子菜单的展开收起功能正常工作
            $(document).off('click.dropdown').on('click.dropdown', '.dropdown-toggle', function() {
                const submenuId = $(this).attr('href');
                $(submenuId).collapse('toggle');
            });
            
            // 如果当前页面在子菜单中，确保父菜单展开
            if ($('#sidebar ul ul li.active').length > 0) {
                $('#sidebar ul ul li.active').closest('ul').addClass('show');
                $('#sidebar ul ul li.active').closest('li').find('a.dropdown-toggle').attr('aria-expanded', 'true');
            }

            // 二级菜单折叠功能
            initSubmenuCollapse();

            // 启动菜单事件监控
            setupMenuEventMonitor();

            // 添加键盘快捷键：Ctrl+Shift+M 重新初始化菜单事件
            $(document).on('keydown', function(e) {
                if (e.ctrlKey && e.shiftKey && e.key === 'M') {
                    e.preventDefault();
                    reinitializeMenuEvents();
                    // 显示提示信息
                    if (typeof showSuccess === 'function') {
                        showSuccess('菜单事件已重新初始化');
                    } else {
                        alert('菜单事件已重新初始化');
                    }
                }
            });

            // 完全禁用AJAX导航，使用传统页面跳转
            // initAjaxNavigation();
        });

        // AJAX导航功能
        function initAjaxNavigation() {
            // 拦截菜单链接点击事件
            $('#sidebar a[href^="/"]').not('a[href*="logout"]').not('a[href*="login"]').on('click', function(e) {
                e.preventDefault();

                const url = $(this).attr('href');
                const linkText = $(this).find('.menu-text').text() || $(this).text().trim();

                // 更新菜单激活状态
                updateMenuActiveState($(this));

                // 加载页面内容
                loadPageContent(url, linkText);
            });
        }

        // 更新菜单激活状态
        function updateMenuActiveState($clickedLink) {
            // 移除所有激活状态
            $('#sidebar li').removeClass('active');

            // 添加当前链接的激活状态
            $clickedLink.closest('li').addClass('active');

            // 如果是二级菜单，也激活父级菜单
            const $parentMenu = $clickedLink.closest('ul.collapse').prev('a');
            if ($parentMenu.length > 0) {
                $parentMenu.closest('li').addClass('active');
            }
        }

        // 加载页面内容
        function loadPageContent(url, title) {
            // 显示加载指示器
            $('#pageLoader').removeClass('d-none');
            $('#dynamicContent').addClass('d-none');

            // 更新浏览器历史记录
            if (window.location.pathname !== url) {
                history.pushState({url: url, title: title}, title, url);
            }

            // 发送AJAX请求
            $.ajax({
                url: url,
                type: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                success: function(data) {
                    // 清空并隐藏加载指示器
                    $('#pageLoader').addClass('d-none');

                    // 清空动态内容区域，防止重复内容
                    $('#dynamicContent').empty();

                    // 添加新内容
                    $('#dynamicContent').html(data).removeClass('d-none');

                    // 更新页面标题
                    if (title) {
                        document.title = title + ' - 仓储管理系统';
                    }

                    // 确保布局正确
                    setTimeout(function() {
                        preserveSidebarState();
                    }, 50);

                    // 重新初始化页面脚本
                    initPageScripts();
                },
                error: function(xhr, status, error) {
                    // 隐藏加载指示器
                    $('#pageLoader').addClass('d-none');
                    $('#dynamicContent').removeClass('d-none');

                    // 显示错误信息
                    let errorMessage = '页面加载失败';
                    if (xhr.status === 403) {
                        errorMessage = '您没有权限访问此页面';
                    } else if (xhr.status === 404) {
                        errorMessage = '页面不存在';
                    } else if (xhr.status === 500) {
                        errorMessage = '服务器内部错误';
                    }

                    $('#dynamicContent').html(`
                        <div class="container-fluid">
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>加载失败：</strong>${errorMessage}
                                <br><small>错误代码：${xhr.status} ${error}</small>
                                <hr>
                                <button class="btn btn-outline-danger btn-sm" onclick="location.reload()">
                                    <i class="fas fa-refresh me-1"></i>刷新页面
                                </button>
                            </div>
                        </div>
                    `);
                }
            });
        }

        // 重新初始化页面脚本
        function initPageScripts() {
            // 暂时禁用侧边栏状态保护
            // preserveSidebarState();

            // 重新初始化Bootstrap组件
            if (typeof bootstrap !== 'undefined') {
                // 重新初始化tooltips
                $('[data-bs-toggle="tooltip"]').tooltip();

                // 重新初始化popovers
                $('[data-bs-toggle="popover"]').popover();

                // 重新初始化modals
                $('.modal').modal('dispose').modal();
            }

            // 重新初始化DataTables（如果存在）
            if (typeof $.fn.DataTable !== 'undefined') {
                $('.table').each(function() {
                    if ($.fn.DataTable.isDataTable(this)) {
                        $(this).DataTable().destroy();
                    }
                });
            }

            // 重新初始化二级菜单状态
            initSubmenuStates();

            // 触发自定义页面初始化事件
            $(document).trigger('pageContentLoaded');
        }

        // 保护侧边栏状态
        function preserveSidebarState() {
            // 轻量级状态检查，只在必要时调整
            const savedState = localStorage.getItem('sidebarState');
            const $sidebar = $('#sidebar');
            const $content = $('#content');

            // 只在状态不一致时才调整
            if (savedState === 'collapsed' && !$sidebar.hasClass('active')) {
                $sidebar.addClass('active');
                $content.addClass('active');
                $('#sidebar-toggler i').removeClass('fa-angle-left').addClass('fa-angle-right');
            } else if (savedState !== 'collapsed' && $sidebar.hasClass('active')) {
                $sidebar.removeClass('active');
                $content.removeClass('active');
                $('#sidebar-toggler i').removeClass('fa-angle-right').addClass('fa-angle-left');
            }
        }

        // 处理浏览器前进后退按钮
        window.addEventListener('popstate', function(event) {
            if (event.state && event.state.url) {
                // 更新菜单激活状态
                const $targetLink = $(`#sidebar a[href="${event.state.url}"]`);
                if ($targetLink.length > 0) {
                    updateMenuActiveState($targetLink);
                }

                // 加载页面内容（不更新历史记录）
                loadPageContentWithoutHistory(event.state.url, event.state.title);
            }
        });

        // 加载页面内容（不更新历史记录）
        function loadPageContentWithoutHistory(url, title) {
            $('#pageLoader').removeClass('d-none');
            $('#dynamicContent').addClass('d-none');

            $.ajax({
                url: url,
                type: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                success: function(data) {
                    // 清空并隐藏加载指示器
                    $('#pageLoader').addClass('d-none');

                    // 清空动态内容区域，防止重复内容
                    $('#dynamicContent').empty();

                    // 添加新内容
                    $('#dynamicContent').html(data).removeClass('d-none');

                    if (title) {
                        document.title = title + ' - 仓储管理系统';
                    }

                    // 确保布局正确
                    setTimeout(function() {
                        preserveSidebarState();
                    }, 50);

                    initPageScripts();
                },
                error: function() {
                    $('#pageLoader').addClass('d-none');
                    $('#dynamicContent').removeClass('d-none');
                    $('#dynamicContent').html('<div class="alert alert-danger">页面加载失败</div>');
                }
            });
        }

        function initSubmenuCollapse() {
            // 初始化二级菜单状态
            initSubmenuStates();

            // 使用事件委托绑定点击事件，确保动态内容也能正常工作
            $(document).off('click.submenu').on('click.submenu', '.submenu-header', function(e) {
                e.preventDefault();
                e.stopPropagation();

                const targetId = $(this).data('target');
                const targetSection = $('#' + targetId);
                const isCollapsed = targetSection.hasClass('collapsed');

                // 切换状态
                if (isCollapsed) {
                    targetSection.removeClass('collapsed');
                    $(this).removeClass('collapsed');
                } else {
                    targetSection.addClass('collapsed');
                    $(this).addClass('collapsed');
                }

                // 保存状态到localStorage
                const states = JSON.parse(localStorage.getItem('submenuStates') || '{}');
                states[targetId] = isCollapsed ? 'expanded' : 'collapsed';
                localStorage.setItem('submenuStates', JSON.stringify(states));
            });
        }

        // 重新初始化菜单事件绑定的函数
        function reinitializeMenuEvents() {
            // 重新绑定二级菜单事件
            initSubmenuCollapse();
            console.log('菜单事件已重新初始化');
        }

        // 监听页面变化，自动重新初始化菜单事件
        function setupMenuEventMonitor() {
            // 使用MutationObserver监听DOM变化
            const observer = new MutationObserver(function(mutations) {
                let shouldReinit = false;
                mutations.forEach(function(mutation) {
                    if (mutation.type === 'childList' && mutation.target.id === 'content') {
                        shouldReinit = true;
                    }
                });

                if (shouldReinit) {
                    setTimeout(reinitializeMenuEvents, 100);
                }
            });

            // 开始观察
            const contentElement = document.getElementById('content');
            if (contentElement) {
                observer.observe(contentElement, {
                    childList: true,
                    subtree: true
                });
            }

            // 定期检查菜单事件是否正常工作
            setInterval(function() {
                checkMenuEventHealth();
            }, 30000); // 每30秒检查一次
        }

        // 检查菜单事件健康状态
        function checkMenuEventHealth() {
            const submenuHeaders = $('.submenu-header');
            if (submenuHeaders.length > 0) {
                // 检查是否有事件监听器
                let hasEventListeners = false;
                submenuHeaders.each(function() {
                    const events = $._data(this, 'events') || {};
                    if (Object.keys(events).length > 0) {
                        hasEventListeners = true;
                        return false; // 跳出循环
                    }
                });

                // 如果没有事件监听器，重新初始化
                if (!hasEventListeners) {
                    console.warn('检测到菜单事件丢失，正在重新初始化...');
                    reinitializeMenuEvents();
                }
            }
        }

        function initSubmenuStates() {
            // 从localStorage加载二级菜单状态
            const savedStates = JSON.parse(localStorage.getItem('submenuStates') || '{}');

            // 应用保存的状态
            Object.keys(savedStates).forEach(sectionId => {
                if (savedStates[sectionId] === 'collapsed') {
                    const section = document.getElementById(sectionId);
                    const header = document.querySelector(`[data-target="${sectionId}"]`);
                    if (section && header) {
                        section.classList.add('collapsed');
                        header.classList.add('collapsed');
                    }
                }
            });

            // 检查当前页面是否在某个二级菜单中，如果是则展开该菜单
            $('.submenu-section').each(function() {
                if ($(this).find('li.active').length > 0) {
                    const sectionId = $(this).attr('id');
                    const header = $(`[data-target="${sectionId}"]`);
                    $(this).removeClass('collapsed');
                    header.removeClass('collapsed');

                    // 更新localStorage
                    const states = JSON.parse(localStorage.getItem('submenuStates') || '{}');
                    states[sectionId] = 'expanded';
                    localStorage.setItem('submenuStates', JSON.stringify(states));
                }
            });
        }

        // 会话计时器
        {% if current_user.is_authenticated and session.get('login_time') %}
        function updateSessionTimer() {
            const loginTime = new Date('{{ session.get("login_time") }}');
            const now = new Date();
            const sessionDuration = now - loginTime;
            const maxDuration = 6 * 60 * 60 * 1000; // 6小时（毫秒）
            const remaining = maxDuration - sessionDuration;

            if (remaining <= 0) {
                // 会话已过期，刷新页面触发重定向
                location.reload();
                return;
            }

            const hours = Math.floor(remaining / (60 * 60 * 1000));
            const minutes = Math.floor((remaining % (60 * 60 * 1000)) / (60 * 1000));

            const timerElement = document.getElementById('sessionTimer');
            if (timerElement) {
                timerElement.textContent = `${hours}:${minutes.toString().padStart(2, '0')}`;

                // 如果剩余时间少于30分钟，显示警告颜色
                if (remaining < 30 * 60 * 1000) {
                    timerElement.className = 'text-warning';
                }
                // 如果剩余时间少于10分钟，显示危险颜色
                if (remaining < 10 * 60 * 1000) {
                    timerElement.className = 'text-danger';
                }
            }
        }

        // 每分钟更新一次计时器
        updateSessionTimer();
        setInterval(updateSessionTimer, 60000);

        // 在会话即将过期前5分钟显示提醒
        function checkSessionWarning() {
            const loginTime = new Date('{{ session.get("login_time") }}');
            const now = new Date();
            const sessionDuration = now - loginTime;
            const maxDuration = 6 * 60 * 60 * 1000; // 6小时（毫秒）
            const remaining = maxDuration - sessionDuration;

            // 剩余5分钟时显示警告
            if (remaining <= 5 * 60 * 1000 && remaining > 4 * 60 * 1000) {
                if (confirm('您的会话将在5分钟后过期，是否需要延长会话？')) {
                    refreshSession();
                }
            }
        }

        // 刷新会话
        function refreshSession() {
            fetch('{{ url_for("auth.refresh_session") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRFToken': '{{ csrf_token() }}'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // 刷新页面以获取新的会话时间
                    location.reload();
                } else {
                    alert('会话刷新失败: ' + data.message);
                }
            })
            .catch(error => {
                console.error('刷新会话时出错:', error);
                alert('会话刷新失败，请重新登录');
            });
        }

        // 每分钟检查一次会话警告
        setInterval(checkSessionWarning, 60000);
        {% endif %}

        // 强制登出函数
        function forceLogout() {
            // 清除所有cookie
            document.cookie.split(";").forEach(function(c) {
                document.cookie = c.replace(/^ +/, "").replace(/=.*/, "=;expires=" + new Date().toUTCString() + ";path=/");
            });

            // 清除localStorage和sessionStorage
            localStorage.clear();
            sessionStorage.clear();

            // 发送登出请求
            fetch('/auth/logout', {
                method: 'GET',
                credentials: 'same-origin'
            }).then(function() {
                // 强制跳转到登录页面
                window.location.href = '/auth/login';
            }).catch(function() {
                // 即使请求失败也跳转到登录页面
                window.location.href = '/auth/login';
            });
        }
    </script>
