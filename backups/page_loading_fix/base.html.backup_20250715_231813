    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- 表格列宽调整脚本 -->
    <script src="{{ url_for('static', filename='js/table-column-resizer.js') }}"></script>
    <!-- 统一消息提示系统 -->
    <script src="{{ url_for('static', filename='js/message-system.js') }}"></script>
